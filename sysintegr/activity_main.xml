<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgVu2"
        android:layout_width="222dp"
        android:layout_height="111dp"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgVu3"
        android:layout_width="222dp"
        android:layout_height="111dp"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout3"
        app:layout_constraintTop_toBottomOf="@+id/imgVu2" />

    <ImageView
        android:id="@+id/imgVu4"
        android:layout_width="222dp"
        android:layout_height="111dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVu3" />

    <TextView
        android:id="@+id/textView_v1"
        android:layout_width="223dp"
        android:layout_height="109dp"
        android:text="Video1"
        android:textColor="#F44336"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgVu1"
        app:layout_constraintStart_toStartOf="@+id/viewURrobot"
        app:layout_constraintTop_toTopOf="@+id/imgVu1"
        app:layout_constraintVertical_bias="0.504" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#F44336"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#F44336"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVu2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#F44336"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgVu3" />

    <ImageView
        android:id="@+id/imgVu1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/videoView1"
        android:layout_width="24dp"
        android:layout_height="33dp"
        android:layout_marginTop="94dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="174dp"
        android:layout_height="129dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#4DFFEB3B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_selfIP">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Base status"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_basePitch"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_bsPch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_baseRoll"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_bsRol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_baseSpeed"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_bsSpd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.2"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/viewMap"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginBottom="80dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewURrobot"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:background="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="@+id/viewMap"
        app:layout_constraintEnd_toStartOf="@+id/viewMap" />

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="204dp"
        android:layout_height="152dp"
        android:layout_marginTop="32dp"
        android:background="#4DFFEB3B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_estop">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distances to obstacles"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_distFront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_distBack"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_distLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_distRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_estop">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⬆"
                android:textAlignment="center"
                android:textSize="60sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="←"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⬇"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:textSize="60sp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/viewMap"
        app:layout_constraintEnd_toEndOf="@+id/viewMap"
        app:layout_constraintStart_toStartOf="@+id/viewMap"
        app:layout_constraintTop_toTopOf="@+id/viewMap" />

    <Button
        android:id="@+id/button6"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="Ctrl 1"
        app:layout_constraintStart_toStartOf="@+id/viewURrobot"
        app:layout_constraintTop_toBottomOf="@+id/viewURrobot" />

    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="Ctrl 2"
        app:layout_constraintEnd_toEndOf="@+id/viewURrobot"
        app:layout_constraintTop_toBottomOf="@+id/viewURrobot" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Robotic arm pose"
        app:layout_constraintBottom_toBottomOf="@+id/viewURrobot"
        app:layout_constraintEnd_toEndOf="@+id/viewURrobot"
        app:layout_constraintStart_toStartOf="@+id/viewURrobot"
        app:layout_constraintTop_toTopOf="@+id/viewURrobot" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-16dp"
        android:layout_marginBottom="24dp"
        android:text="@string/btn_setGoal"
        app:layout_constraintBottom_toTopOf="@+id/viewMap"
        app:layout_constraintEnd_toEndOf="@id/viewMap" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="#4DFFEB3B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fork lift"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_sbpStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/teal_200"
                android:text="@string/txt_sbpStatus"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_rotJ"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_rotAngle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2°"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_rotInc"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_rotDec"
                android:layout_width="30sp"
                android:layout_height="wrap_content"
                android:text="−"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_prismJ"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_prism"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="79"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#4DFFEB3B"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/viewMap"
        app:layout_constraintStart_toStartOf="@+id/viewMap">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioBtnM1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/radio_mode1"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioBtnM2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/radio_mode2"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4DFFEB3B"
        android:text="Moving mode"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/viewMap" />

    <Button
        android:id="@+id/btn_robotIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="00.00.00.00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_selfIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="00.00.00.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_robotIP" />

    <Button
        android:id="@+id/btn_estop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/銀朱"
        android:text="@string/btn_emerg"
        android:textAllCaps="false"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>